<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvTitle1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="BillNo："/>
    <TextView
        android:id="@+id/tvBN"
        app:layout_constraintLeft_toRightOf="@+id/tvTitle1"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/tvTitle2"
        android:text="CopGNo："
        android:layout_marginTop="15dp"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle1"
        app:layout_constraintLeft_toLeftOf="@+id/tvTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvCG"
        app:layout_constraintLeft_toRightOf="@+id/tvTitle2"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvTitle3"
        android:text="QrpQty："
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle2"
        app:layout_constraintLeft_toLeftOf="@+id/tvTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvQQ"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@+id/tvTitle3"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvTitle4"
        android:text="LineNum："
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle3"
        app:layout_constraintLeft_toLeftOf="@+id/tvTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvLN"
        app:layout_constraintLeft_toRightOf="@+id/tvTitle4"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTT"
        app:layout_constraintLeft_toLeftOf="@+id/tvTT"
        />
</android.support.constraint.ConstraintLayout>