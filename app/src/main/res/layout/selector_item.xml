<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:id="@+id/cl"
    android:background="@drawable/selector_item_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvTitle1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="排期单号："/>
    <TextView
        android:id="@+id/tvBN"
        app:layout_constraintLeft_toRightOf="@+id/tvTitle1"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvTitle2"
        android:text="排单日期："
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle1"
        app:layout_constraintLeft_toLeftOf="@+id/tvTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvBD"
        app:layout_constraintLeft_toRightOf="@+id/tvTitle2"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvTitle3"
        android:text="客户编码："
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle2"
        app:layout_constraintLeft_toLeftOf="@+id/tvTitle2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvBC"
        app:layout_constraintLeft_toRightOf="@+id/tvTitle3"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</android.support.constraint.ConstraintLayout>